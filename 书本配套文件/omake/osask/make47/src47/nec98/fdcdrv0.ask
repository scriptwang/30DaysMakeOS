		EAX |= 0x02010000;
	//	EDI = 0x00301402;
	//	ECX = 20;
		EDI = 0x004c1302;
		ECX = 19;
		EAX += EDX; // スキューファクター加算
		EDX = 0x100000;
		do {
			[DS:EDX] = EAX;
			EAX += 0x00010000;
			EDX += 4;
			EBX = EAX;
			EBX &= 0x00ff0000;
			if (EBX == 0x00140000) {
				EAX &= 0xff00ffff;
				EAX |= 0x00010000;
			}
			ECX--;
		} while (!= 0);
		POP(DS);
		ECX = work->dosload_sigtmp;
		EDX = 0x100000;
	//	FDC_MC_test5();
		return;
pass00:
		EAX = /* track */ work->dosload_FAT;
		EAX++;
		/* track */ work->dosload_FAT = EAX;
	} while ((unsigned) EAX < 160);
#endif
	EDI = 111 /* 7 + 8 * 13 */; // システムクラスタ(104KB)

	asmout("JMP FDC_format99");
}

void near FDC_writeIPL2()
// ECX:作業中のシグナル
// EDX:完了のシグナル
{
	unsigned int                         all_sel       ==  1 * 8;
	unsigned int init_sel     ==  2 * 8, syswork_sel   ==  3 * 8;
	unsigned int tapi_sel == 12 * 8;

	FDC_WORK *work == DS:0;

	// size0 : 未転送バイト数
	// size1 : sub-phase

	if (work->dosload_phase != 0) {
		INT(0x03);
	}

	asmout("FDC_writeIPL0: EQU $");

	// 依頼された値をworkに保存しておく
	work->dosload_sigtmp = ECX;
	work->dosload_sigfin = EDX;

	/* [FS:EBX +  4] : boot-sector-code size */
	/* [FS:EBX +  8] : boot-sector-code addr */
	/* [FS:EBX + 12] : osask.exe size */
	/* [FS:EBX + 16] : osask.exe addr */

	PUSH(DS);
	PUSH(all_sel);
	POP(DS);
	PUSH(ESI);
	EAX = 0; /* とりあえず0クリア */
	ESI = 0x104000;
	ECX = 512 * 1024 / 4; /* max:512KB */
	do {
		[DS:ESI] = EAX;
		ESI += 4;
		ECX--;
	} while (!= 0);
	EDX = [FS:EBX +  8];
	ESI = 0x100000;
	ECX = SECTOR_BYTES / 4;
	do {
		EAX = [DS:EDX];
		EDX += 4;
		[DS:ESI] = EAX;
		ESI += 4;
		ECX--;
	} while (!= 0);
	EDX = [FS:EBX + 16];
	ECX = [FS:EBX + 12];
	ESI = 0x104000;
	EDX += 512; // ヘッダを読み飛ばす
	ECX -= 512 - 3;
	(unsigned int) ECX /= 4;
	do {
		EAX = [DS:EDX];
		EDX += 4;
		[DS:ESI] = EAX;
		ESI += 4;
		ECX--;
	} while (!= 0);
//	EAX = [FS:EBX + 12];
//	EAX += 1024 - 512 - 1;
//	EAX &= 0xfffffc00; // KB単位に切り上げ
//	EAX += 8191;
//	(unsigned int) EAX /= 8192;
//	AL += 2;
//	[DS:0x10003f] = AL;
	POP(ESI);
	POP(DS);

	/* ライトキャッシュを設定 */
	EAX = 0;
	ECX = 360;
	do {
	//	work->WBFS[ECX - 4] = EAX;
		[ECX - 4 + work->WBFS] = EAX;
		ECX -= 4;
	} while (!= 0);
	(char) work->WBFS[0] = 0x01; /* bit0 */
	ECX = [FS:EBX + 12];
	EDX = 16;
	ECX += 1023 - 512;
	ECX /= 1024;
	do {
		BTS((int) work->WBFS[0], EDX);
		EDX++;
		ECX--;
	} while (!= 0);

	asmout("JMP FDC_format98");
}

