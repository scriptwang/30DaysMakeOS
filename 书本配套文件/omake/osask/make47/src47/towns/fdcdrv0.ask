}

void errorfile()
{
	FDC_WORK *work == DS:0;
	PUSH(DS);
	PUSHAD();
	MOV(ECX, CS);
	ECX += 8;
	DS = CX;
	if (work->CFerrflg == 0) {
		work->track[0] |= 0x03;
		work->CFerrflg |= AH;
		PUSH(1 * 8);
		POP(DS);
		ESI = 0x100000;
		ECX = 0;
		do {
			[DS:ESI] = ECX;
			ESI += 4;
		} while ((unsigned) ESI < ROOT_ENTRY1);
		ESI = ROOT_ENTRY0;
		(int) [DS:ESI + 0] = 0x4f525245;
		(int) [DS:ESI + 4] = 0x20205f52;
		(int) [DS:ESI + 8] = 0x00202020;
		[DS:ESI + 6] = AL;
	}
	POPAD();
	POP(DS);
	return;
}
