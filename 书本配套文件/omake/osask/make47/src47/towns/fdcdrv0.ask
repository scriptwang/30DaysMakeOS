		//	EAX = work->dosload_FAT;
			EAX += SYSTEM_SECTORS;
		//	CL = 8; /* 1.2MBでは8で割る */
			EDX = EAX; // 物理アドレスEDX
		//	DIV(CL); // ALにトラック番号
		//	EAX &= 0xff;
			EAX /= 8;

#if 0
