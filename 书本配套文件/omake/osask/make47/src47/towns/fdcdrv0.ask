void FDC_MC_test4_fd()
// EDX:ロードする物理アドレス, ECX:シグナル番号
// AH:side番号(0 or 1), AL:シリンダー番号
// 1trackロード for DOS(64KB境界に注意しているので効率アップ)
// このバージョンではシークの必要があるときだけシークする
/* 汎用レジスタ破壊。DSはworkに初期化されていることを前提にしている */
{
	FDC_WORK *work == DS:0;
	int *cmd == DS:EBX, cmd_free == EBP;

	PUSHFD();
	CLI();
	PUSH(ECX);

	(offset) cmd = work->MC_ptr;
	if ((unsigned) (offset) cmd == 0x0100) {
		asmout("MOV DWORD PTR DS:[EBX+ 0],OFFSET FDC_MC_DriveReady");
		cmd[ 4] = 0;
		(offset) cmd += 8;
		if (work->cylinder[0] == 0xf0) {
			asmout("MOV DWORD PTR DS:[EBX],OFFSET FDC_MC_Seek");
			cmd[ 4] = 0;
			(offset) cmd += 8;
			work->cylinder[0] = 0;
		}
		if (AL != work->cylinder[0]) {
			asmout("MOV DWORD PTR DS:[EBX],OFFSET FDC_MC_Seek");
			cmd[ 4] = EAX;
			(offset) cmd += 8;
			work->cylinder[0] = AL;
		}
		TEST(AH, AH);
		EAX = 0x80040301; /* cmd : DMA-mode : CLKSEL-HD1SEL-DDEN : sector */
		if (!= 0)
			EAX |= 0x08000400;
		do {
			asmout("MOV DWORD PTR DS:[EBX+ 0],OFFSET FDC_MC_ReadWriteData");
			cmd[ 4] = SECTOR_BYTES;
			cmd[ 8] = EDX;
			cmd[12] = EAX; // R, AH, 04, 80 /* read data */
			(offset) cmd += 16;
			AL++;
			EDX += SECTOR_BYTES;
		} while ((unsigned) AL <= 8);

		asmout("MOV DWORD PTR DS:[EBX+ 0],OFFSET FDC_MC_DriveOff");
		cmd[ 4] = 0;
		asmout("MOV DWORD PTR DS:[EBX+ 8],OFFSET FDC_MC_MakeSignal");
		cmd[12] = 2;
		EAX = work->TAPI_sendsignalofs;
		ECX = work->TAPI_sendsignalsel;
		cmd[16] = EAX;
		cmd[20] = ECX;
		EAX = [SS:ESP /* ECX */];
		cmd[24] = 0x1241;
		cmd[28] = EAX;
		asmout("MOV DWORD PTR DS:[EBX+32],OFFSET FDC_MC_Finish");

		(offset) cmd = 0x100;
		asmout("CALL DWORD PTR DS:[EBX]");
		work->MC_ptr = (offset) cmd;
		work->MC_free = cmd_free;
	}

	POP(ECX);
	POPFD();
	return;
}

