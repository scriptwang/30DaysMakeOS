void poweron()
{
	FDC_WORK *work == DS:0;
	unsigned int all_sel == 1 * 8;
	PUSH(DS);
	PUSH(EDX);
	PUSH(EAX);
	MOV(EAX, CS);
	EAX += 8;
	DS = AX;
	if (work->CFpower == 0) {
		PUSH(ES);
		PUSH(all_sel);
		POP(ES);
		TEST(work->CFerrflg, 0x04);
		if (!= 0)
			goto err;
		EDX = 0x048a;
		IN(AL, DX);
		AL &= 0x06;
		if (!= 0) { /* カードがない！ */
err:
			AL = 0x43; /* C:カードがない */
			AH = 0x01; /* とりあえず書き込めなくする */
			errorfile();
		} else {
			/* モードのセット */
			EDX = 0x0491;
			AL = 0x01; /* REG */
			OUT(DX, AL);
			EAX = work->CFport;
			(char) [ES:EAX + 0x0200] = 0x00; /* メモリマップトモード */
			(char) [ES:EAX + 0x0206] = 0x00; /* デバイス番号は0 */
			AL = 0x00; /* MEM */
			OUT(DX, AL);
			work->CFerrflg &= 0xfe /* ~1 */;
			work->CFpower = 1;
		}
		POP(ES);
	}
	POP(EAX);
	POP(EDX);
	POP(DS);
	return;
}

void poweroff()
{
	FDC_WORK *work == DS:0;
	unsigned int all_sel == 1 * 8;
	if (work->CFpower != 0)
		work->CFpower = 0;
	return;
}

