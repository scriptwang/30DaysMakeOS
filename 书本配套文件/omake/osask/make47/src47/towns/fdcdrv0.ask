void near FDC_MC_Seek()
{
	FDC_WORK *work == DS:0;
	int *cmd == DS:EBX, cmd_free == EBP;

	// FDCのクロック変更(2MHz)
	AL = work->motor;
	TEST(AL, 0x20);
	if (!= 0) {
		AL &= 0xdf;
		EDX = 0x0208;
		work->motor = AL;
		OUT(DX, AL);
	}

	AL = cmd[4]; // 目的のシリンダ番号
	work->trackreg[0] = AL;
	asmout("MOV DWORD PTR DS:[0008H],OFFSET #fdcint");
	if (AL != 0) {
		EDX = 0x0206;
		OUT(DX, AL);
		EDX -= 0x06;
		AL = 0x10;
		OUT(DX, AL);
		return;
	}
	EDX = 0x0200;
	AL = 0x00;
	OUT(DX, AL);
	return;

fdcint:
	TEST(CL, 0x19);
	if (== 0) {
		(offset) cmd += 8;
		cmd_free += 2;
		asmout("JMP DWORD PTR DS:[EBX]");
	}
	INT(0x03); // error
}

void near FDC_MC_ReadWriteData()
// 標準は、1KB/sector, 8sectors/track, 77cylinder/drive
{
	FDC_WORK *work == DS:0;
	int *cmd == DS:EBX, cmd_free == EBP;
	char *status_buf == DS:EDI;

	AL = work->motor;
	AL &= 0xd9;
	EDX = 0x0208;
	AL |= (char) cmd[13]; // CLKSEL, HD1SEL, DDEN
	work->motor = AL;
	OUT(DX, AL);
	EDX -= 4;
	AL = (char) cmd[12];
	OUT(DX, AL); // sector

	// DMA設定
	AL = (char) cmd[14];
		// demand-mode, addr-inc., mem-write, byte > 0x04
		// demand-mode, addr-inc., mem-read,  byte > 0x08
	OUT(0x00aa, AL);
	EAX = cmd[4]; // 転送バイト数
	OUT(0x00a2, AX);
	EAX = cmd[8]; // 転送先物理アドレス
	OUT(0x00a4, EAX);
	NOP();
	IN(AL, 0x00af);
	AL &= 0x0e;
	OUT(0x00af, AL); // マスク解除

	asmout("MOV DWORD PTR DS:[0008H],OFFSET #fdcint");

	// コマンド送信
	AL = (char) cmd[15];
	EDX -= 4;
	OUT(DX, AL);
	return;

fdcint:
	IN(AL, 0x00af);
	AL &= 0x0f;
	AL |= 0x01;
	OUT(0x00af, AL); // マスク設定
//	CL &= 0xf9;
	if (CL == 0) {
		(offset) cmd += 16;
		cmd_free += 4;
		asmout("JMP DWORD PTR DS:[EBX]");
	}
	EAX = cmd[8]; // 転送先物理アドレス
	INT(0x03); // error
}

